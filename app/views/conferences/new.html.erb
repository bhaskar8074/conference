<h1>New Conference</h1>

<%= form_with(model: @conference, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <div>
    <%= form.label :date %>
    <%= form.datetime_field :date %>
  </div>
  <%= form.submit 'Create Conference' %>
<% end %>

<%= link_to 'Back', conferences_path %>
